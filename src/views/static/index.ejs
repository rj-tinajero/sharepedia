<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/head.ejs %>
  </head>
  <body>

      <!-- Navigation -->
      
      <% include ./partials/navbar.ejs %>

      <!-- Page Content -->
      <main class="container">

        <!-- Jumbotron Header -->
        <header class="jumbotron my-4">
          <h1 class="display-3">Welcome to Sharepedia</h1>
          <p class="lead">An application for users to share Markdown Wikis</p>
          <% if(!locals.currentUser) { %>
            <a href="/users/signup" class="btn btn-primary btn-lg">Sign up</a>
          <% } %>
        </header>

        <!-- Page Features -->
        <section class="row text-center">

          <section class="col-lg-6">
            <h4 class="card-title">Free Plan</h4>
            <p class="card-text">Create as many public wikis as you want!</p>
          </section>

          <section class="col-lg-6">
            <h4 class="card-title">Premium Plan</h4>
            <p class="card-text">Create Private wikis!</p>
          </section>

        </section>
        <!-- /.row -->

      </main>
      <!-- /.container -->

      
      <% include ./partials/baseScripts.ejs %>
